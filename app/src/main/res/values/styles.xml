<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App bar main -->
    <style name="ToolbarIconTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Set color for toolbar icons -->
        <item name="colorControlNormal">@color/black</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextStyle</item>
    </style>

    <!-- Text and size for menu item -->
    <style name="CustomMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/black</item> <!-- Change text color -->
        <item name="android:textSize">12sp</item> <!-- Optional: Customize text size -->
    </style>

    <!-- Nav header main -->

    <!-- Style for imageView -->
    <style name="CustomImageViewStyleLogo">
        <item name="android:tint">@color/black</item> <!-- Change icon color -->
    </style>
    <!-- Style for textView -->
    <style name="CustomTextViewStyleLogo">
        <item name="android:textColor">@color/black</item> <!-- Change text color  -->
    </style>

    <!-- Activity main -->
    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <!-- Set the icon tint and text color -->
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <!-- Set background color -->
        <item name="android:background">@color/white</item>
        <!-- Apply the custom item background -->
        <item name="itemBackground">@drawable/select_drawer_menu</item>
    </style>

    <!-- Library fragment -->
    <style name="CustomTextViewStyleLibrary">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Folder display -->
    <style name="CustomBackgroundColorComicDisplay">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="CustomTextViewStyleComicDisplay">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomTextViewStyleComicFormat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <!-- Alert dialog -->
    <style name="CustomTextViewStyleDialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomEditTextDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="CustomButtonCancelDialog">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_gray</item>
    </style>
    <style name="CustomButtonOkDialog">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_gray</item>
    </style>
    <style name="CustomBackgroundColorDialog">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="CustomRadioButtonDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <!-- Folder library -->
    <style name="CustomFolderTextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- Pop-menu Comic file -->
    <style name="CustomPopMenuBackground">
        <item name="android:background">@drawable/popup_background</item>
    </style>
    <style name="CustomPopMenuTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Comic View Background -->
    <style name="CustomComicViewBackground">
        <item name="android:background">@color/white</item>
    </style>

    <!-- Comic Drag Handle -->
    <style name="CustomComicDragHandle">
        <item name="android:background">@drawable/drag_handle</item>
    </style>

    <!-- Comic Control Panel (Menu) -->
    <style name="CustomControlMenuPanel">
        <item name="android:background">@drawable/control_panel_background</item>
    </style>

    <style name="Widget.CustomSlider" parent="Widget.MaterialComponents.Slider">
        <item name="trackColorActive">@color/black</item>
        <item name="trackColorInactive">@color/white</item>
        <item name="thumbColor">@color/black</item>
        <item name="trackHeight">4dp</item>
        <item name="thumbRadius">8dp</item>
    </style>

    <style name="CustomControlMenuPanelTextViewStyleColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Bottom scanning banner -->
    <style name="CustomBottomScanningBanner">
        <item name="android:background">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
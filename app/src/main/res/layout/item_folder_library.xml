<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/folder_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    style="@style/CustomFolderLibraryBackgroundColor">

    <ImageView
        android:id="@+id/iv_library_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        style="@style/CustomFolderColorIcon"/>

    <TextView
        android:id="@+id/tv_library_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/folder_name"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="4dp"
        style="@style/CustomFolderTextViewStyle"/>
</LinearLayout>
